.calendar
  width vw(935)
  margin vw(30) auto
  display flex
  flex-direction column
  justify-content center
  padding vw(20)
  background-color #fff
  border-radius vw(20)

  &__table
    border-collapse separate 
    table-layout fixed 
    width vw(895)
    border-spacing: 7px 11px

  &__date
    font-weight 700
    text-transform uppercase
    color $blue
    font-size vw(18)
    margin 0 vw(5)
    letter-spacing -0.1rem

  &__btn
    &-arrow
      width vw(15)
      height vw(15)

      &--left
        transform rotate(180deg)

  &__header
    display flex

  &__head
    &-item
      width vw(120)
      font-size vw(14)
      font-weight 700
      text-align right
      margin vw(10)
      text-transform uppercase
      letter-spacing -0.1rem
  
  &__day
    width vw(120)
    height vw(120)
    padding vw(10)
    margin vw(10)
    box-shadow: 0 0 5px rgba(0,0,0,0.5);
    border-radius vw(10)
    border 1px solid transparent

    &-number
      text-align right
      font-weight 700

    &.last
      background-color #65636321
      
      .calendar__day-number
        color #b3b3b3

    &.weekend .calendar__day-number
      c #848ddc

    &.today
      border-color #000

      .calendar__day-number
        c #a0d4b5

  &__events
    margin-top vw(15)

    &-item
      width 100%
      & + &
        margin-top vw(3)

    &-text
      width 100%
      vertical-align: top;
      padding 0 vw(5)
      font-size vw(10)
      font-weight 700
      border-radius vw(20)
      overflow hidden
      text-overflow: ellipsis;
      white-space nowrap

      &:hover
        width 100%
        display: inline;
        overflow: visible;

    .red
      background-color #f4d7d9
      c #cc808a

    .yellow
      background-color #f9e8d2
      c #dfb782

    .green
      background-color #d0f0e3
      c #6fd87b

  
